@model IEnumerable<eform.Models.FlowDefMain>

@{
    ViewBag.Title = "表單簽核管理";
}
<div class="row">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="box-body">
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nm)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.code) - @Html.DisplayFor(modelItem => item.nm) 
                            </td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id=item.id })*@
                                <a href="@Url.Action("SetupFlow",new { id=item.id })" class="btn btn-success"><i class="fa fa-pencil-square"></i>簽核人員</a>
                                @*@Html.ActionLink("Delete", "Delete", new { id=item.id })*@
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
