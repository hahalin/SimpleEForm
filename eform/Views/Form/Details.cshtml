@model IEnumerable<eform.Models.vwFlowSub>
@using eform.Models
@{
    ViewBag.Title = "";
    vwReqOverTime subModel = (vwReqOverTime)ViewBag.SubModel;
    FlowMain flowMain = (FlowMain)ViewBag.flowMain;
}

<div class="row">
    <div class="col-md-8">
        <div class="box">
            <div class="box-header">
                <div class="box-title">
                    @*<h3><span class="label label-success">@ViewBag.Title</span></h3>*@
                    <h3>@flowMain.flowName 明細</h3>
                </div>
            </div>
            <div class="box-body>">
                <div class="form-horizontal" style="padding:30px;">
                    <div class="form-group" style="border-bottom:1px solid gray;">
                        <label class="control-label col-md-2">表單日期:</label>
                        <div class="col-md-10">@flowMain.billDate</div>
                    </div>
                    <div class="form-group" style="border-bottom:1px solid gray;">
                        <label class="control-label col-md-2">開始時間:</label>
                        <div class="col-md-10">@subModel.dtBegin</div>
                    </div>
                    <div class="form-group" style="border-bottom:1px solid gray;">
                        <label class="control-label col-md-2">開始時間:</label>
                        <div class="col-md-10">@subModel.dtEnd</div>
                    </div>
                    <div class="form-group" style="border-bottom:1px solid gray;">
                        <label class="control-label col-md-2">時數: </label>
                        <div class="col-md-10">@subModel.hours</div>
                    </div>
                    <div class="form-group" style="border-bottom:1px solid gray;">
                        <label class="control-label col-md-2">備註: </label>
                        <div class="col-md-10">
                            <span style="white-space: pre-line">@subModel.sMemo</span>
                        </div>
                    </div>
                </div>

                <h3><span class="label label-success">簽核清單</span></h3>
                <table class="table table-bordered table-hover table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.seq)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.signDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.signer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.signType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.signResult)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.comment)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.seq)                                
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.signDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.signer)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.signType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.signResult)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.comment)
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="box-footer">
                <a href="@Url.Action("Index","Form")" class="btn btn-primary">返回表單清單</a>
            </div>
        </div>
    </div>
</div>
