@model eform.Models.news

@{
    ViewBag.Title = "NewsDetail";
}

<div class="row">
    <div class="col-md-8">
        <div class="box">
            <div class="box-header with-border">
                <h3>@Model.title</h3>
            </div>
            <div class="box-body">
                @{
                    string content = Model.content.Replace("\"", "");
                }
                @Html.Raw(content)
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-primary" })
</div>
