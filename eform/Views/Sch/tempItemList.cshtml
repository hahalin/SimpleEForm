@model IEnumerable<eform.Models.schTempItem>
@using eform.Models
@{
    ViewBag.Title = "tempItemList";
    Layout = "~/Views/Shared/_Layout.cshtml";

    schTemp pObj = (schTemp)ViewBag.schTemp;

}

<section class="row">
    <div class="box box-primary">
        <div class="box-header">
            <h1>模板項目清單</h1>
            <h2>分類編號-@pObj.code</h2>
        </div>
        <div class="box-header">
            <a href="@Url.Action("tempList")" class="btn btn-default">返回清單</a>
            <a href="@Url.Action("tempItemCreate","Sch",new { pid = pObj.id })" class="btn btn-primary">新增</a>
        </div>
        <div class="box-body">
            <table class="table table-responsive table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.seq)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.txt)
                    </th>
                    <th>
                        
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.seq)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.txt)
                        </td>
                        <td>
                            <a href="@Url.Action("tempItemRemove", "Sch",new { id = item.id,pid=item.pid })" class="btn btn-danger" onclick="return checkRemove(); return false;">刪除</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        function checkRemove()
        {
            var r = confirm("確定刪除?");
            return r;
        }
    </script>

}

