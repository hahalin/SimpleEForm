@model eform.Models.permission
<div class="row">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-default" href="@Url.Action("index",new { mod = Model.mod })"><i class="fa fa-list"></i>清單</a>
                <h3>@ViewBag.Title</h3>
            </div>
            <div class="box-body">

                @using (Html.BeginForm("Create", "Perm", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.workNo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.HiddenFor(model => model.mod)
                                @Html.EditorFor(model => model.workNo, new { htmlAttributes = new { @class = "form-control"} })
                                @Html.ValidationMessageFor(model => model.workNo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="儲存" class="btn btn-primary">
                                <a class="btn btn-default" href="@Url.Action("index",new { mod = Model.mod})">取消</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
