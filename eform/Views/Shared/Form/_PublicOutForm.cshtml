@using eform.Models;
@{
    vwPublicOut subModel = (vwPublicOut)ViewBag.SubModel;
    FlowMain flowMain = (FlowMain)ViewBag.flowMain;
}

<div class="box-body">
    <div class="form-horizontal col-md-10">
        <div class="form-group">
            <label class="control-label col-md-2">出差人員</label>
            <div class="col-md-4">
                <div class="form-control">@subModel.user.workNo-@subModel.user.UserCName</div>
            </div>
            @Html.LabelFor(model => subModel.requestDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div class="form-control">
                    @Convert.ToDateTime(subModel.dtBegin).ToString("yyyy/MM/dd")
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => subModel.subject, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="form-control">
                    @subModel.subject
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => subModel.dtBegin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="form-control">
                    @Convert.ToDateTime(subModel.dtBegin).ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>
            @Html.LabelFor(model => subModel.dtEnd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="form-control">
                    @Convert.ToDateTime(subModel.dtEnd).ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => subModel.transport, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="form-control">
                    @subModel.transport
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => subModel.destination, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="form-control">
                    @subModel.destination
                </div>
            </div>
        </div>
    </div>
</div>




