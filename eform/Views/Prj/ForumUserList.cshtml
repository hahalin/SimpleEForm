@model IEnumerable<eform.Models.vwPrjForumUser>

@{
    Layout = "~/Views/Shared/_PrjLayout.cshtml";
}

<div class="section">
    <div class="row col-md-12">
        <div class="box">
            <div class="box-header text-center">
                <h4>專案討論區 @ViewBag.prjCaption 成員清單</h4>
            </div>
            <div class="box-header">
                <a href="@Url.Action("ForumUsers","Prj")" class="btn btn-default">返回清單</a>
                <a href="@Url.Action("AddForumUser","Prj",new { id = ViewBag.prjid })" class="btn btn-primary"><i class="fa fa-plus"></i>新增成員</a>
            </div>
            <div class="box-body">

                <table class="table table-bordered table-condensed">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.WorkNo)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @item.WorkNo-@item.cName
                        </td>
                    </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>