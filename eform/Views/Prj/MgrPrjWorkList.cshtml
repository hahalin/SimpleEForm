@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@model IEnumerable<eform.Models.vwPrjWork>
@{
    ViewBag.Title = "主管審核工時報表清單";
    Layout = "~/Views/Shared/_PrjLayoutBase.cshtml";
}

<div class="row">
    <div class="col-md-10">
        <div class="box">
            <div class="box-title text-center">
                <h3><span class="" style="font-weight:bold;">群翌能源股份有限公司</span></h3>
                <h3><span class="label label-success">主管審核工時報表清單</span></h3>
            </div>
            <div class="box-body">
                <table class="table table-hover table-bordered table-striped col-md-8" style="font-size:13px;">
                    <tr>
                        <th style="width:100px;"></th>
                        <th style="width:110px;">
                            @Html.DisplayNameFor(model => model.y)
                        </th>
                        <th style="width:120px;">
                            @Html.DisplayNameFor(model => model.w)
                        </th>
                        <th style="width:120px;">
                            @Html.DisplayNameFor(model => model.workNo)
                        </th>
                    </tr>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                        <tr>
                            <td>
                                <a href="@Url.Action("SignPrjWork", new { id = item.id })" class="btn btn-info">檢視</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.y)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.w)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.workNoStr)
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        
    </script>
}