@model eform.Models.jobPo

@{
    ViewBag.Title = "CreatePo";
}

<h2>CreatePo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>jobPo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.depNo,new { Value = @ViewBag.id, htmlAttributes = new { @class = "form-control" } })
            @Html.LabelFor(model => model.poNm, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.poNm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.poNm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("部門職稱管理", "Details", "Dep", new { id = @ViewBag.id }, new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
