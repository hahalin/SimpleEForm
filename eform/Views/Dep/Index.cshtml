@model IEnumerable<eform.Models.dep>

@{
    ViewBag.Title = "部們管理";
}

<h2>部門管理</h2>

<div class="row">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-primary" href="@Url.Action("Create")"><i class="fa fa-plus"></i>新增部門</a>
                @*@Html.ActionLink("新增部門", "Create", new {}, new { @class = "btn btn-primary" })*@
            </div>
            <div class="box-body">
                <table class="table table-hover ">
                    <tbody>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.depNm)
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.depNm)
                                </td>
                                <td>
                                    <a class="btn btn-success" href="@Url.Action("Details",new { id = item.depNo })">
                                        <i class="fa fa-group"></i>
                                        職稱管理
                                    </a>
                                    @*@Html.ActionLink("編輯", "Edit", new { id = item.depNo },new { @class = "btn btn-info"})*@
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.depNo }, new { @class = "btn btn-danger" })*@
                                </td>
                            </tr>
                }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>