@model eform.Models.dep
<div class="row">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-default" href="@Url.Action("index",new { depLevel = Model.depLevel })"><i class="fa fa-list"></i>清單</a>
                @if(ViewBag.Mode=="Edit")
                { 
                    <a class="btn btn-success" href="@Url.Action("Details",new { id = Model.depNo })">
                        <i class="fa fa-group"></i>
                        職稱
                    </a>
                }

                <h3>@ViewBag.Title</h3>           
            </div>
            <div class="box-body">

                @using (Html.BeginForm("Create","Dep",FormMethod.Post))
            {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.depLevel)
                        @Html.HiddenFor(model=>model.depNo)
                        <div class="form-group">
                            @Html.LabelFor(model => model.sort, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.sort, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                @Html.ValidationMessageFor(model => model.sort, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.depNm, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.depNm, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.depNm, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="儲存" class="btn btn-primary">
                                <a class="btn btn-default" href="@Url.Action("index",new { depLevel = Model.depLevel })">取消</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
