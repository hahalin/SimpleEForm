@model IEnumerable<eform.Models.news>

@{
    ViewBag.Title = "Index";
}

<h2>公告管理</h2>

<div class="row">
    <div class="col-md-8">
        <div class="box">
            <div class="box-header">
                <div class="box-title">
                    @*<h3><span class="label label-success">公告管理</span></h3>*@
                    <a href="@Url.Action("Create")" class="btn btn-primary">新增公告</a>
                </div>
            </div>
            <div class="box-body>">

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ndate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.title)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @{
                                    string ndate = Convert.ToDateTime(item.ndate).ToString("yyyy-MM-dd");
                            }

                            @ndate
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.title)
                        </td>
                        @*<td>
                                @{
                                    string content = item.content.Replace("\"", "");
                                }
                                @Html.Raw(content)
                            </td>*@
                        <td>
                            <a href="@Url.Action("Edit",new {id=item.id })" class="btn btn-info">修改</a>
                            <a href="@Url.Action("Delete",new {id=item.id })" class="btn btn-danger">刪除</a>
                        </td>
                    </tr>
                                    }

                </table>
            </div>
        </div>
    </div>
</div>